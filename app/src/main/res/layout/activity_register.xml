<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar (상단바) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:titleTextColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />


        <!-- ScrollView (주 내용) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/button_register">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/button_upload_image"
                        android:layout_marginTop="2dp"
                        android:layout_width="46dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_camera_alt_24"
                        android:layout_gravity="center"
                        android:background="@drawable/outlined_border"
                        android:layout_marginEnd="8dp"/>  <!-- 테두리 배경 추가 -->

                    <ImageView
                        android:id="@+id/image_preview_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/image_preview_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:id="@+id/image_preview_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:id="@+id/image_preview_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:id="@+id/image_preview_5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_title"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:textColor="@android:color/black" />

                <!-- 제목 입력 필드 -->
                <EditText
                    android:id="@+id/edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  제목"
                    android:background="@drawable/outlined_border"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />


                <TextView
                    android:id="@+id/text"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설명"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outlined_border"
                    android:hint="  내용"
                    android:inputType="textMultiLine"
                    android:lines="10"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

                <EditText
                    android:id="@+id/edit_price"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  가격"
                    android:background="@drawable/outlined_border"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

            </LinearLayout>
        </ScrollView>

        <!-- 등록 버튼 -->
        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Drawer Navigation (드로어 메뉴) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
