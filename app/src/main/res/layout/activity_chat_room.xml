<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">



    <!-- 아이템 어댑터 데이터 표시 영역 -->
    <LinearLayout
        android:id="@+id/item_adapter_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bordered_background"
        android:padding="8dp"
        android:layout_marginBottom="12dp">

        <!-- 아이템 어댑터 항목이 동적으로 추가됩니다. -->
        <!-- 예시로 하나의 항목을 미리 표시할 수 있음 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/itemImage"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- 제목 -->
                <TextView
                    android:id="@+id/itemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <!-- 가격 -->
                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/itemDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종료: "
                    android:textSize="14sp"
                    android:textColor="#FF0000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 채팅방 ID -->
    <TextView
        android:id="@+id/text_chat_room_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채팅방 ID: 12345"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/bordered_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <!-- 최고 입찰가 -->
    <TextView
        android:id="@+id/text_highest_bid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최고가: 0원 (없음)"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/bordered_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <!-- 현재 가격 -->
    <TextView
        android:id="@+id/pricetextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작가: 0원"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/bordered_background"
        android:padding="8dp" />


    <!-- 채팅 메시지 표시 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/chat_background"
        android:padding="8dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/chat_message_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- 메시지 입력 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_background"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp">

        <!-- 메시지 입력 필드 -->
        <EditText
            android:id="@+id/edit_text_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="메시지를 입력하세요"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary_text1"
            android:textSize="14sp" />

        <!-- 메시지 전송 버튼 -->
        <Button
            android:id="@+id/btn_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송"
            android:backgroundTint="@color/button_color"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>