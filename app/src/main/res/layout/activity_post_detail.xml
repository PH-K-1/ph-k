<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar for action bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Image View for product image -->
        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/toolbar"
            android:scaleType="centerCrop" />

        <!-- Divider between image and title -->

        <!-- Text View for product title -->

        <View
            android:id="@+id/dividerAboveTitle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/itemImageView"
            android:layout_marginTop="66dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividerAboveTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="세련된 스마트폰"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Divider between title and description -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/titleTextView"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />

        <!-- Text View for product description -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_marginTop="41dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="asdsad"
            android:textColor="#666666"
            android:textSize="16sp" />

        <!-- Bottom container for price and button -->
        <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="8dp"
            android:elevation="4dp">

            <!-- Text View for product price -->
            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="₩ 100,000"
                android:textColor="#FF5722"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- MaterialButton to participate in auction -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buyButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:backgroundTint="#FF5722"
                android:text="경매 참여하기"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
